---
import {Image} from "astro:assets";

interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
  stars?: boolean;
}

const {image, title, description, stars} = Astro.props;
---

<div class="flex flex-col w-80 lg:w-96 snap-center flex-shrink-0">
  <Image
    src={image}
    alt={title}
    class="h-52 lg:h-72 w-full rounded-3xl"
    width={image.width / 8}
    height={image.height / 8}
  />
  <div class="flex items-center mt-4">
    {
      stars &&
        [0, 1, 2, 3, 4].map(() => (
          <>
            <div
              class="text-yellow-500 h-5 w-5 flex-shrink-0"
              aria-hidden="true"
            />
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-6 h-6"
            >
              <path
                fill-rule="evenodd"
                d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                clip-rule="evenodd"
              />
            </svg>
          </>
        ))
    }
  </div>
  <h3 class="mt-2 text-neutral-900 text-xl font-bold">
    {title}
  </h3>
  <p class="text-neutral-500 tracking-wider text-sm mt-2">
    {description}
  </p>
</div>
