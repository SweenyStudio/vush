---
import Container from "@components/ui/container.astro";
import HeaderLogo from "@assets/light-logo.webp";
import { Image } from "astro:assets";
import Link from "@components/ui/link.astro";
---

<section class="bg-[#373737] pb-16">
    <div class="h-44 w-full md:h-96">
        <svg
            width="100%"
            height="100%"
            viewBox="0 0 1000 1000"
            xmlns="http://www.w3.org/2000/svg"
            preserveAspectRatio="none"
            overflow="auto"
            shape-rendering="auto"
            fill="#FFFFFF"
            class="bg-white"
        >
            <defs>
                <path
                    id="wavepath"
                    d="M 0 2000 0 500 Q 150 300 300 500 t 300 0 300 0 300 0 300 0 300 0  v1000 z"
                ></path>

                <path id="motionpath" d="M -600 0 0 0"></path>
            </defs>
            <g>
                <use xlink:href="#wavepath" y="180" fill="#373737">
                    <animateMotion dur="8s" repeatCount="indefinite">
                        <mpath xlink:href="#motionpath"></mpath>
                    </animateMotion>
                </use>
            </g>
        </svg>
    </div>
    <Container>
        <div class="flex w-full items-center justify-between">
            <a href="/">
                <Image src={HeaderLogo} alt="Vush Logo" class="h-auto w-24" />
            </a>

            <Link
                class="md:px-18 group flex w-fit items-center justify-center gap-x-2 text-lg md:py-5 md:text-xl"
                href="#product"
                >Start Playing Today
                <span
                    ><svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="translate-all h-5 w-5 duration-300 group-hover:translate-x-2"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
                    </svg>
                </span>
            </Link>
        </div>
    </Container>
</section>
