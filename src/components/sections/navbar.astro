---
import Container from "@components/ui/container.astro";
import {StickyHeader, Astronav, MenuIcon} from "astro-navbar";
import Link from "@components/ui/link.astro";
import {Image} from "astro:assets";
import HeaderLogo from "@assets/header-logo.webp";
---

<StickyHeader
  class="fixed w-full top-0 z-20 transition-all py-4"
  scrollY={50}
  defaultClass="border-transparent bg-transparent"
  activeClass=" border-vushBlack border-b bg-white"
  transition:persist
>
  <Container>
    <div
      class="flex flex-col lg:flex-row justify-between items-center relative z-10 w-full"
    >
      <Astronav>
        <div class="flex w-full items-center justify-between">
          <a>
            <Image src={HeaderLogo} alt="Vush Logo" class="w-24 h-auto" />
          </a>

          <Link
            class="text-center flex flex-row items-center justify-center gap-x-2 group"
            href="#product"
          >
            <p>Get Started</p>
            <span
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-5 h-5 group-hover:translate-x-2 duration-300 translate-all"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
              </svg>
            </span>
          </Link>
        </div>
      </Astronav>
    </div>
  </Container>
</StickyHeader>
