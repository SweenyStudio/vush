---
import Container from "@components/ui/container.astro";
import Chilli1 from "@assets/tiers/ROUND GIF 1CHILI_1.gif";
import Chilli2 from "@assets/tiers/ROUND GIF 2CHILI_1.gif";
import Chilli3 from "@assets/tiers/ROUND GIF 3CHILI_1.gif";
import { Image } from "astro:assets";
import Text from "@components/ui/text.astro";
import Header from "@components/ui/header.astro";
import SubHeader from "@components/ui/sub-header.astro";

const tiers = [
    {
        title: "Single Chili 🌶️",
        description: "Tame - Date nights, fun activities and intimacy prompts",
        image: Chilli1,
    },
    {
        title: "Double Chili 🌶️🌶️",
        description: "Dial Up The Heat - Time to get a little spicier",
        image: Chilli2,
    },
    {
        title: "Triple Chili 🌶️🌶️🌶️",
        description: "Extra Adventurous - Hot bedroom antics and adventures",
        image: Chilli3,
    },
];
---

<section class="py-16">
    <Container>
        <Header class="text-center"> Our 3 Tiered Spice-O-Meter </Header>
        <Text class="mt-4 text-center text-lg">
            Choose your spice level and let us take care of the rest. Each tier
            comes with a unique set of activities and prompts to keep things
            interesting.
        </Text>
        <div class="mt-6 grid grid-cols-1 items-start gap-12 md:grid-cols-3">
            {
                tiers.map((tier) => (
                    <div class="flex flex-col items-center justify-center text-center ">
                        <Image
                            src={tier.image}
                            alt={tier.title}
                            class="h-auto w-4/5 px-12"
                            loading="eager"
                        />
                        <SubHeader class=" font-clearface mt-6 text-3xl uppercase ">
                            {tier.title}
                        </SubHeader>
                        <Text class="mt-2 ">{tier.description}</Text>
                    </div>
                ))
            }
        </div>
    </Container>
</section>
